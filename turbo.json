{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["PORT"],
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**",
        "build/**"
      ],
      "dependsOn": ["^build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "dev:mocks": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "clean:all": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "test:ci": {
      "cache": false,
      "dependsOn": ["storybook:build"],
      "outputs": ["**/junit/*.json", "**/.nyc_output/*.json"]
    },
    "test:unit": {
      "cache": false,
      "dependsOn": ["storybook:build"],
      "outputs": ["**/junit/*.json"]
    },
    "test:coverage": {
      "cache": false,
      "dependsOn": ["storybook:build"],
      "outputs": ["**/.nyc_output/*.json"]
    },
    "test:coverage:create": {
      "cache": false,
      "outputs": ["**/.nyc_output/*.xml"]
    },
    "test:coverage:move": {
      "cache": false,
      "outputs": ["output/coverage/*.xml"]
    },
    "storybook:dev": {
      "cache": false
    },
    "storybook:build": {
      "cache": true,
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts"],
      "outputs": ["**/storybook-static/**"]
    },
    "storybook:move": {
      "cache": false,
      "outputs": ["output/storybook-static/**"]
    }
  }
}
