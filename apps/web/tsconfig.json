{
  "exclude": ["dist"],
  "extends": "typescript-config/vite.json",
  "compilerOptions": {
    // Build & Resolve
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    // Paths & Types
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["typescript-config/types", "vite-plugin-pwa/client"]
  },
  "include": ["**/*.ts", "**/*.tsx", ".storybook/vite.config.ts", "vite.config.ts"]
}
