{
  "exclude": ["dist"],
  "extends": "tsconfig/vite.json",
  "compilerOptions": {
    // Build & Resolve
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    // Paths & Types
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": [
      "@types/testing-library__jest-dom",
      "mui-theme/types",
      "tsconfig/types",
      "vite-plugin-pwa/client"
    ],
  },
  "include": ["./src"],
}
