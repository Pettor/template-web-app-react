{
  "exclude": ["dist"],
  "extends": "tsconfig-config/base.json",
  "compilerOptions": {
    // Build & Resolve
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    // Paths & Types
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["tsconfig-config/types"]
  },
  "include": ["./src"]
}
