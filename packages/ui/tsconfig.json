{
  "extends": "typescript-config/react.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": "src",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "paths": {
      ".": ["."]
    },
    "types": ["typescript-config/types"]
  },
  "include": ["**/*.ts", "**/*.tsx", ".storybook/vite.config.ts"]
}
